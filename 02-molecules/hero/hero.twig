{# Markup begins here #}
{% set hero__base_class = 'hero' %}

{# Background Image #}
{% embed "@atoms/images/background-image/background-image.twig" with {
  background_image__base_class: hero__base_class,
} %}
  {% block background_image %}
    {% include "@atoms/images/image/responsive-image.twig" with {
      output_image_tag: true,
      image_blockname: background_image_base_class_var,
      image_srcset: image_srcset|default(image.sixteen_by_nine.responsive.srcset),
      image_sizes: image_sizes|default(image.sixteen_by_nine.responsive.sizes),
      image_src: image_src|default(image.sixteen_by_nine.responsive.src),
    } %}
  {% endblock %}
  {% block background_image__content %}
    <div {{ bem('content', [], hero__base_class) }}>
      <div {{ bem('content-inner', [], hero__base_class) }}>
        {# Heading #}
        {% include "@atoms/text/headings/_heading.twig" with {
          heading_level: '1',
          heading_blockname: hero__base_class,
          heading: hero__heading,
        } %}
        {# Content #}
        {% include "@atoms/text/text/01-paragraph.twig" with {
          paragraph_blockname: hero__base_class,
          paragraph_content: hero__content,
        } %}
      </div>
    </div>
  {% endblock %}
{% endembed %}
