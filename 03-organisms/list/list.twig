{% set list_base_class = list_base_class|default('list') %}

{% if not list_modifiers %}
  {% set list_modifiers = [] %}
{% endif %}

{% if page_layout_modifier %}
  {% set list_modifiers = list_modifiers|merge([page_layout_modifier]) %}
{% endif %}

{% if list_type %}
  {% set list_modifiers = list_modifiers|merge([list_type]) %}
{% endif %}

{% if list_label %}
  {% include "@atoms/text/headings/_heading.twig" with {
    "heading_level": 2,
    "heading": list_label,
  } %}
{% endif %}
<div {{ bem(list_base_class, list_modifiers, list_blockname) }}>
  {% block list_content %}
    {% for item in items %}
      {% include "@organisms/list/_list-examples.twig" %}
    {% endfor %}
  {% endblock %}
</div>
